<% readonly ||= false %>
<div class="details_dialog">
<%= form_for(@kontrollgang, remote: true) do |f| %>
  <% if @kontrollgang.errors.any? %>
    <div id="error_explanation">
      <h2>Es gab <%= @kontrollgang.errors.count %> Fehler beim Speichern:</h2>

      <ul>
      <% @kontrollgang.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !@kontrollgang.persisted? %>
    <%= f.hidden_field :wachbuch_eintrag_id %>
  <% end %>
  <div class="field">
    <%= f.label :uhrzeit, "Uhrzeit: " %><br>
    <%= f.text_field :uhrzeit, class: 'time_input', readonly: readonly %>
  </div>
  <div class="field">
    <%= f.label :bemerkung, "Bemerkung: " %><br>
    <%= f.text_area :bemerkung, rows: 5, readonly: readonly %>
  </div>
  <div class="actions">
    <% if readonly %>
      <button onclick="close_kontrollgang()">Schlie√üen</button>
    <% else %>
      <button onclick="close_kontrollgang()">Abbrechen</button>
      <%= f.submit "Speichern" %>
    <% end %>
  </div>
<% end %>
</div>
